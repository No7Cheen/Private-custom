<resources>

    <attr name="holoTheme">
        <enum name="dark" value="1" />
        <enum name="invalid" value="0" />
        <enum name="light" value="2" />
        <enum name="mixed" value="3" />
        <enum name="preference" value="4" />
    </attr>

    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="HoloCircularProgressBar">
        <attr name="stroke_width" format="dimension" />
        <attr name="progress" format="float"></attr>
        <attr name="marker_progress" format="float"></attr>
        <attr name="progress_color" format="color"></attr>
        <attr name="progress_background_color" format="color"></attr>
        <attr name="thumb_visible" format="boolean"></attr>
        <attr name="marker_visible" format="boolean"></attr>
        <attr name="android:gravity"></attr>
    </declare-styleable>
    
    <declare-styleable name="Theme">
        <attr name="circularProgressBarStyle" format="reference"></attr>        
    </declare-styleable>
    
    
    <declare-styleable name="TextViewPlus">
        <attr name="left_height" format="dimension" />
        <attr name="left_width" format="dimension" />
        <attr name="right_height" format="dimension" />
        <attr name="right_width" format="dimension" />
        <attr name="top_height" format="dimension" />
        <attr name="top_width" format="dimension" />
        <attr name="bottom_height" format="dimension" />
        <attr name="bottom_width" format="dimension" />
        <attr name="duration" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="CalendarStyle">
        <attr name="weekLabelBg" format="reference|color" />
        <attr name="weekLabelHeight" format="dimension" />
        <attr name="weekLabelTxtColor" format="reference|color" />
        <attr name="weekLabelTxtSize" format="dimension" />
        <attr name="lineColor" format="reference|color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="datTxtColor_Normal" format="reference|color" />
        <attr name="dayTxtSize_Normal" format="dimension" />
        <attr name="outMonthColor" format="reference|color" />
        <attr name="selecteColor" format="reference|color" />
    </declare-styleable>

    <attr name="CalendarStyle" format="reference" />

</resources>